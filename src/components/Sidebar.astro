---
import { Icon } from "astro-icon/components";
import Text from "./Text.astro";
import { menu } from "@/utilities/helpers/menu";

---

<nav class=" w-20 flex flex-col bg-slate-100 dark:bg-natural border-r-0 border-purple-border fixed h-full">
  <div class="flex flex-col h-full relative items-center justify-between"> 

    <div class="flex flex-col items-center justify-center h-full text-foreground gap-6">
      {menu.slice(0,5).map(({name, icon, link}) => <span class="flex flex-col items-center justify-center group">
        <Text type="p" content={name}  className="font-bold text-[14px] invisible group-hover:visible group-hover:hover:vicible" />
        <a href={link}>
          <Icon name={icon} size={24} />
        </a>
      </span>)
      }
    </div>

    <div class="flex flex-col gap-y-4 my-8 text-foreground">
      {menu.slice(5,7).map(({name, icon, link}) => <span class="flex flex-col items-center justify-center group">
       <Text type="p" content={name}  className="font-bold text-[14px] invisible group-hover:visible group-hover:hover:vicible" />
        <a href={link}>
          <Icon name={icon} size={24} />
        </a>
      </span>)}
    </div>
  </div>
</nav>