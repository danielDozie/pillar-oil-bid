---
import { Icon } from "astro-icon/components";
import AdminLayout from "../../../layouts/AdminLayout.astro";

import reportStore from "@/store/reports";
import { Button } from "@/components/ui/react/button";

const report = reportStore.getState().$reports;

---

<AdminLayout title="Report">
    <div class="flex flex-col gap-x-4 ml-24 w-[calc(100%-7rem)] p-8 mt-24 mb-8 h-full rounded-2xl">
  <div>
    <h1 class="font-semibold text-2xl text-foreground my-8">Vendor and Bid Report</h1>
  </div>

  <div class="flex gap-x-6">
    <div class="w-1/4 bg-slate-100 dark:bg-natural rounded-lg p-4 shadow-md">
      <h2 class="font-semibold text-foreground text-lg mb-2">Total Vendors</h2>
      <span class="flex justify-between">
        <p class="text-gray-500 dark:text-gray-300 text-4xl font-bold">{report?.totalVendor}</p>
        <Icon
          name="majesticons:analytics-line"
          size={40}
          class="bg-white dark:bg-slate-300 text-slate-500 p-2 rounded-full"
        />
      </span>
    </div>
    <div
      class="w-1/4 bg-slate-100 dark:bg-natural font-semibold text-foreground rounded-lg p-4 shadow-md"
    >
      <h2 class="font-semibold text-lg mb-2">Total Bids</h2>
      <span class="flex justify-between">
        <p class="text-gray-500 dark:text-gray-300 text-4xl font-bold">0</p>
        <Icon
          name="majesticons:analytics-line"
          size={40}
          class="bg-white dark:bg-slate-300 text-slate-500 p-2 rounded-full"
        />
      </span>
    </div>
    <div
      class="w-1/4 bg-slate-100 dark:bg-natural font-semibold text-foreground rounded-lg p-4 shadow-md"
    >
      <h2 class="font-semibold text-lg mb-2">Total Tenders</h2>
      <span class="flex justify-between">
        <p class="text-gray-500 dark:text-gray-300 text-4xl font-bold">{report?.totalTender}</p>
        <Icon
          name="majesticons:analytics-line"
          size={40}
          class="bg-white dark:bg-slate-300 text-slate-500 p-2 rounded-full"
        />
      </span>
    </div>
    <div
      class="w-1/4 bg-slate-100 dark:bg-natural font-semibold text-foreground rounded-lg p-4 shadow-md"
    >
      <h2 class="font-semibold text-lg mb-2">Export Reports</h2>
      <span class="flex justify-between">
        <Button className="bg-primary text-white px-4 py-2 rounded-md">Export CSV</Button>
        <Button className="bg-primary text-white px-4 py-2 rounded-md">Export PDF</Button>
      </span>
    </div>
  </div>
</div>
</AdminLayout>
